@model Book

<div class="card shadow border-0 mt-4">
    <input asp-for="Id" hidden/>
    <div class="card-header m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-5">
                <div class="form-floating py-2 col-12">
                    <input disabled  asp-for="Title" class="form-control border-1" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 mb-2">
                    <input disabled asp-for="Description" class="form-control border-1" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 mb-2">
                    <input disabled asp-for="Author" class="form-control border-1" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 mb-2">
                    <input disabled asp-for="Rating" class="form-control border-1" />
                    <label asp-for="Rating" class="ms-2"></label>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 mb-2">
                    <input disabled asp-for="yearOfPublication" class="form-control border-1" />
                    <label asp-for="yearOfPublication" class="ms-2"></label>
                    <span asp-validation-for="yearOfPublication" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-2">
                        <button type="submit" class="btn form-control">Delete</button>
                    </div>
                    <div class="col-1 col-md-2">
                        <a asp-controller="Book" asp-action="Index" class="btn  form-control border">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}