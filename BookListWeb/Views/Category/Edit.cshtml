@model Category

<div class="card shadow border-0 mt-4">
    <input asp-for="Id" hidden />
    <div class="card-header m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-5">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-1" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 mb-2">
                    <input asp-for="DisplayOrder" class="form-control border-1" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-2">
                        <button type="submit" class="btn form-control">Edit</button>
                    </div>
                    <div class="col-1 col-md-2">
                        <a asp-controller="Category" asp-action="Index" class="btn  form-control border">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>